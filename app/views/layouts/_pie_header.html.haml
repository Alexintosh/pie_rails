            %li= link_to t('pies'), py_path(current_user.pie)
            %li= link_to t('models'), pies_path
            %li= link_to t('backtest_title'), graph_path(1)
            %li= link_to t('settings'), setting_path(1)
          - else
            %li= link_to t('synthetics'), synthetics_index_pies_path
            %li= link_to t('balancer_pools'), balancer_index_pies_path
      .r_hright
        %ul.h_hrih.afclr
          - if signed_in?
            %li= link_to t('sign_out'), destroy_user_session_path, :method => :delete
          - else
            %li= link_to t('sign_in'), new_user_session_path
