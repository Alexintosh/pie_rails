= link_to t('show_etfs'), edit_allocation_py_path(@pie, :etf => true), :class => 'btn btn-secondary'
%br
%br
= render :partial => 'shared/pagination', :locals => {:data => stocks, :name => 'Stock'}
%table.table.table-striped
  %caption= t('check_add', :max_equities => Pie::MAX_EQUITIES)
  %tr
    %th
    %th Name
    %th Sector
    %th E
    %th S
    %th G
    %th Alpha
    %th 1mo Return
    %th 3mo Return
    %th 6mo Return
    %th 1y Return
  - @stocks.each do |s|
    %tr
      %td= check_box_tag "add_stock_#{s.id}", '1', @held_stock_ids.include?(s.id), :disabled => @held_stock_ids.include?(s.id)
      %td= s.company_name
      %td= s.sector
      %td= s.forecast_e
      %td= s.forecast_s
      %td= s.forecast_g
      %td= s.alpha
      %td= s.m1_return.round(2)
      %td= s.m3_return.round(2)
      %td= s.m6_return.round(2)
      %td= s.y1_return.round(2)
