%table.table.striped-table{:style => 'width:20%'}
  %caption
    = t('coin_balances')
    %br
    Address: 
    - if ens_name.nil?
      %div{:style => 'font-size:10pt'}
        = address
    - else
      = image_tag 'ens.png', :style => 'width:30px'
      %em= ens_name
      - unless avatar.nil?
        %br= image_tag avatar
  %tr
    %th= t('spend')
    %th= t('token')
    %th= t('balance')
  - coins.keys.each do |coin|
    %tr
      %td
        = check_box_tag "spend_#{coin.downcase}", '1', coins_to_use.nil? ? true : coins_to_use.include?(coin.downcase)
      %td= coin
      %td{:id => "entry_#{coin.downcase}"}= number_with_delimiter(coins[coin])
      = hidden_field_tag "balance_#{coin.downcase}", number_with_delimiter(coins[coin]), :id => "balance_#{coin.downcase}"   
